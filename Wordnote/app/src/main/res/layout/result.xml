<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/click_back"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:scaleType="centerCrop"
        android:background="#00000000"/>
    <TextView
        android:id="@+id/show_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/click_back"
        android:gravity="center"
        android:text="复习结果"
        android:textSize="28sp"
        android:textColor="#8b8d8f"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/show_title"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="正确个数/总数:"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/show_correct_num"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="0/0"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="最高正确个数/总数:"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/show_history_correct_num"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="0/0"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="正确率/总数:"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/show_correct_rate"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="0%/0"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="最高正确率/总数:"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/show_history_correct_rate"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="0%/0"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>