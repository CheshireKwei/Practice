<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/click_back"
        android:layout_width="42dp"
        android:layout_height="32dp"
        android:src="@android:drawable/btn_default"/>
    <TextView
        android:id="@+id/show_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/click_back"
        android:gravity="center"
        android:text="单词复习"
        android:textSize="28sp"/>
    <TextView
        android:id="@+id/show_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Hello"
        android:textSize="28sp"/>
    <LinearLayout
        android:id="@+id/no_effect_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_en"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center">
        <Button
            android:id="@+id/click_mean_1"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:text="你好"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/click_mean_2"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:text="世界"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/click_mean_3"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:text="编程"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/no_effect_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/no_effect_1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/show_result_img"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/no_effect_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/no_effect_2"
        android:orientation="vertical">
        <Button
            android:id="@+id/click_next"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:text="下一个"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/no_effect_3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/show_retain_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="剩余数目"
            android:textSize="15sp"/>
    </LinearLayout>
</RelativeLayout>