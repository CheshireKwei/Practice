<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/show_title"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/main_page_title" />
    <ImageButton
        android:id="@+id/click_record_word"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/record_word"
        android:background="#00000000"/>
    <ImageButton
        android:id="@+id/click_review_word"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/review_word"
        android:background="#00000000"/>
    <ImageButton
        android:id="@+id/click_review_rand_word"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/review_rand_word"
        android:scaleType="centerCrop"
        android:background="#00000000"/>
    <ImageButton
        android:id="@+id/click_explore_all"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/explore_word"
        android:scaleType="centerCrop"
        android:background="#00000000"/>
    <ImageButton
        android:id="@+id/click_exit"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/exit"
        android:scaleType="centerCrop"
        android:background="#00000000"/>
</LinearLayout>