<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/click_back"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:scaleType="centerCrop"
        android:background="#00000000"/>
    <TextView
        android:id="@+id/show_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/click_back"
        android:layout_centerHorizontal="true"
        android:text="单词记录"
        android:textSize="28sp"
        android:textColor="#8b8d8f"/>
    <LinearLayout
        android:id="@+id/no_effect_1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/show_title"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/input_en"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:hint="输入英文"
            android:selectAllOnFocus="true"/>
        <EditText
            android:id="@+id/input_cn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:hint="输入中文"
            android:selectAllOnFocus="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center">
            <RadioGroup
                android:id="@+id/singles"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/single_only_en"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="仅英语" />
                <RadioButton
                    android:id="@+id/single_only_cn"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="仅中文" />
                <RadioButton
                    android:id="@+id/single_en_or_cn"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="两者之一" />
                <RadioButton
                    android:id="@+id/single_en_and_cn"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="完全匹配" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center">
            <ImageButton
                android:id="@+id/click_search"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/search_word"
                android:scaleType="centerCrop"
                android:background="#00000000"/>
            <ImageButton
                android:id="@+id/click_update"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/update_word"
                android:scaleType="centerCrop"
                android:background="#00000000"/>
            <ImageButton
                android:id="@+id/click_record"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/record_word_2"
                android:scaleType="centerCrop"
                android:background="#00000000"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>